<h1>Deseja carregar o código usado aqui?</h1>
<button type="button" onclick="loadAlignContent()">CLIQUE AQUI</button>
<div id="align-content"></div>
<script>
function loadAlignContent() {
  const xhttp = new XMLHttpRequest();
  xhttp.onload = function() {
    document.getElementById("align-content").innerHTML = this.responseText;
  }
  xhttp.open("GET", "./xml/index.xml");
  xhttp.send();
}
</script>

